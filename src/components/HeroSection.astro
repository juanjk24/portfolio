---
import A from "./ui/A.astro";
import Github from "./icons/Github.astro";
import Linkedin from "./icons/Linkedin.astro";
import Briefcase from "./icons/Briefcase.astro";
import Mail from "./icons/Mail.astro";
import Phone from "./icons/Phone.astro";
---

<section
  class="flex flex-col-reverse md:flex-row items-center justify-between gap-8 pt-8"
>
  <div class="space-y-4 text-center md:text-left">
    <h2
      class="text-4xl font-bold bg-gradient-to-r from-pink-500 via-purple-500 to-blue-500 text-transparent bg-clip-text"
    >
      Desarrollador Front-End
    </h2>

    <div class="text-xl text-[#a1a1aa]">
      <p>+4 años de experiencia en el mundo de la programación.</p>
      <p>Desarrollador Web de Colombia.</p>
    </div>

    <div class="flex gap-4 justify-center md:justify-start flex-wrap">
      <A
        href="https://github.com/juanjk24"
        target="_blank"
        rel="noopener noreferrer"
      >
        <Github class="h-5 w-5" />
        <span class="sr-only">GitHub</span>
      </A>

      <A
        href="https://www.linkedin.com/in/juan-cuellar-71b2b0338/"
        target="_blank"
        rel="noopener noreferrer"
      >
        <Linkedin class="h-5 w-5" />
        <span class="sr-only">LinkedIn</span>
      </A>

      <A
        href="https://www.infojobs.net/candidate/cv/view/index.xhtml"
        target="_blank"
        rel="noopener noreferrer"
      >
        <Briefcase class="h-5 w-5" />
        <span class="sr-only">InfoJobs</span>
      </A>

      <A href="mailto:juanjkuellar24@gmail.com">
        <Mail class="h-5 w-5" />
        <span class="sr-only">Email</span>
      </A>

      <A
        href="https://wa.me/573204860520"
        target="_blank"
        rel="noopener noreferrer"
      >
        <Phone class="h-5 w-5" />
        <span class="sr-only">WhatsApp</span>
      </A>
    </div>
  </div>

  <div
    class="relative w-48 h-48 md:w-64 md:h-64 rounded-full overflow-hidden border-4 border-[#fafafa]"
  >
    <img src="/foto-juan.png" alt="Fotografia de Juan Cuellar" />
  </div>
</section>
